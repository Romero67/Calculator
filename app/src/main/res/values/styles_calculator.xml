<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.CalculatorButton" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.CalculatorButton.Blue" parent="AppTheme.CalculatorButton">
        <item name="android:background">#005370</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="AppTheme.CalculatorButton.Red" parent="AppTheme.CalculatorButton">
        <item name="android:background">#EA4D39</item>
    </style>

    <style name="AppTheme.CalculatorButton.Total" parent="AppTheme.CalculatorButton">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#005370</item>
    </style>
</resources>