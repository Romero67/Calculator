<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:layout_rowWeight="6"
    android:layout_columnWeight="5"
    android:rowCount="6"
    android:columnCount="5"
    >

    <TextView
        android:id="@+id/tv_total"
        style="@style/AppTheme.CalculatorButton.Total"
        android:layout_width="match_parent"
        android:textAlignment="textStart"
        android:text="Total = "
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:layout_column="0"
        android:layout_columnSpan="5"
        />

    <TextView
        style="@style/AppTheme.CalculatorButton.Red"
        android:tag="C"
        android:text="C"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginRight="1dp"
        android:layout_gravity="fill_horizontal"
        android:onClick="handleClick"
        />

    <TextView
        android:tag="delete"
        android:background="#EA4D39"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_vertical"
        android:layout_marginLeft="0dp"
        android:paddingLeft="31dp"
        android:paddingRight="31dp"
        android:text=""
        android:drawableStart="@drawable/ic_erase"
        android:onClick="handleClick"
        android:layout_marginRight="1dp"
        />

    <TextView
        android:id="@+id/num_7"
        android:tag="7"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:text="7"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:onClick="handleClick"
        />
    <TextView
        android:id="@+id/num_8"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:tag="8"
        android:text="8"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:onClick="handleClick"
        />
    <TextView
        android:id="@+id/num_9"
        android:tag="9"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:text="9"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_column="3"
        android:layout_columnSpan="1"
        android:onClick="handleClick"
        />
    <TextView
        android:id="@+id/num_4"
        android:tag="4"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:text="4"
        android:layout_row="3"
        android:layout_rowSpan="1"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:onClick="handleClick"
        />
    <TextView
        android:id="@+id/num_5"
        android:tag="5"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:text="5"
        android:layout_row="3"
        android:layout_rowSpan="1"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:onClick="handleClick"
        />
    <TextView
        android:id="@+id/num_6"
        android:tag="6"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:text="6"
        android:layout_row="3"
        android:layout_rowSpan="1"
        android:layout_column="3"
        android:layout_columnSpan="1"
        android:onClick="handleClick"
        />
    <TextView
        android:id="@+id/num_1"
        android:tag="1"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:text="1"
        android:layout_row="4"
        android:layout_rowSpan="1"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:onClick="handleClick"
        />
    <TextView
        android:id="@+id/num_2"
        android:tag="2"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:text="2"
        android:layout_row="4"
        android:layout_rowSpan="1"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:onClick="handleClick"
        />
    <TextView
        android:id="@+id/num_3"
        android:tag="3"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:text="3"
        android:layout_row="4"
        android:layout_rowSpan="1"
        android:layout_column="3"
        android:layout_columnSpan="1"
        android:onClick="handleClick"
        />
    <TextView
        android:id="@+id/num_period"
        android:tag="."
        style="@style/AppTheme.CalculatorButton.Blue"
        android:text="."
        android:layout_row="5"
        android:layout_rowSpan="1"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_gravity="fill_horizontal"
        android:onClick="handleClick"
        />
    <TextView
        android:id="@+id/num_0"
        android:tag="0"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:text="0"
        android:layout_row="5"
        android:layout_rowSpan="1"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:onClick="handleClick"
        />
    <TextView
        android:id="@+id/num_equal"
        android:tag="equal"
        style="@style/AppTheme.CalculatorButton.Blue"
        android:text="="
        android:layout_row="5"
        android:layout_rowSpan="1"
        android:layout_column="3"
        android:layout_columnSpan="1"
        android:onClick="handleClick"
        />
    <TextView
        android:id="@+id/num_division"
        android:tag="division"
        style="@style/AppTheme.CalculatorButton.Red"
        android:text="รท"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:layout_column="3"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="1dp"
        android:onClick="handleClick"
        />
    <TextView
        android:id="@+id/num_multiply"
        android:tag="multiply"
        style="@style/AppTheme.CalculatorButton.Red"
        android:text="x"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_column="4"
        android:layout_gravity="fill_horizontal"
        android:onClick="handleClick"
        />
    <TextView
        android:id="@+id/num_dash"
        android:tag="dash"
        style="@style/AppTheme.CalculatorButton.Red"
        android:text="-"
        android:layout_row="3"
        android:layout_rowSpan="1"
        android:layout_column="4"
        android:layout_gravity="fill_horizontal"
        android:onClick="handleClick"
        />
    <TextView
        android:id="@+id/num_plus"
        android:tag="plus"
        style="@style/AppTheme.CalculatorButton.Red"
        android:text="+"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:layout_column="4"
        android:layout_gravity="fill"
        android:onClick="handleClick"
        />
</GridLayout>